// Colors
dark-gray = #5A5A5A
gray = #e7e7e7
hyperlink = #c1c1c1
navbar-color = #323754

//Sizes
font20 = 20px
weight600 = 600

// Fonts
font-family = 'Lato', sans-serif

// HTML Element CSS
body
    font-family: font-family !important

ul
    list-style-type: none

// Generic Classes
.no-decoration
    text-decoration: none

.margin-5
    margin-top: 5px

.margin-10
    margin-top: 10px

.margin-20
    margin-top: 20px

.display-block
    display: block

// Custom Classes
.waartaa-logo
    font-family: 'Lato', sans-serif
    font-size: font20
    font-weight: weight600
    color: gray

    &:hover
        color: gray
        text-decoration: none

.waartaa-navbar
    background-color: navbar-color

.wr-navbar-icons
    padding-right: 10px
    a
        text-decoration: none
        color: hyperlink
        padding-right: 15px
        padding-left: 5px
        font-size: 15px

.align-dropdown-caret
    margin-right: 16px

nav
    .container
        width: 100%

// Search UI
.search-container
    width: 900px
    margin: 0 auto

    .row
        margin-top: 15px

    .left-col
        width: 550px
        float: left
        padding: 20px 0 0 2px
        word-wrap: break-word

    .search-input
        width: 100%
        border-radius: 20px;
        padding-left: 50px;
        font-size: 15px;
        font-weight: 800;

    .fa-search
        position: absolute
        top: 8px
        left: 16px
        font-size: 18px

    .chzn-container,
    .chzn-cotainer-single
        width: 195px !important
        position: absolute
        top: -5px
        right: 0

        .chzn-single
            height: 34px
            line-height: 30px
            border-radius: 0 15px 15px 0
            overflow: hidden

            div
                b
                    position:absolute
                    top: 5px
        .chzn-drop
            min-width: 195px
            white-space: nowrap
            width: auto !important
            border-top: 1px solid #aaa

    .chzn-with-drop
        .chzn-single
            border-bottom-right-radius: 0

    .nav-tabs
        bottom-border: none

    .tab-content
        max-height: 600px
        border: 1px solid #d4d4d4
        margin-top: -3px;
        border-top: 0px;
        width: 100%

    .bookmark-labels
        ul
            padding: 10px 0 0 15px

            li
                margin-bottom: 5px
